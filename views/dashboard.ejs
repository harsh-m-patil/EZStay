  <!-- Font Awesome script -->
  <script src="https://kit.fontawesome.com/5050694ff5.js" crossorigin="anonymous"></script>
  <!-- Custom JavaScript file for dashboard functionality -->
  <script src="js/dashboard.js"> </script>
</body>

</html>