      </li>
    </ul>
  </div>

  <!-- Main section -->
  <section class="main">
    <!-- Header -->
    <div class="header-wrapper">
      <div class="header-title">
        <h1>Admin Dashboard</h1>
      </div>
      <!-- Search bar -->
      <div class="search hover-effect">
        <!-- <input type="text" name="search" placeholder="Search">
        <i class="fa-solid fa-magnifying-glass"></i> -->
        <a href="/superusersignup">
          <p>Create Superuser</p>
        </a>
      </div>

    </div>
    <!-- Info cards -->
    <div class="info-cards-container">
      <!-- Info card: New Bookings -->
      <div class="info-card hover-effect">
        <div class="info-header">
          <p>Total Hotels</p>
          <!-- Pill with percentage -->
          <div class="pill">
            <span class="circle">◭</span>
            <p></p>
          </div>
        </div>
        <h1>
          <%= hotels.length %>
        </h1>
        <h4 class="bookings-details">Details ></h4>
      </div>
      <!-- Info card: Total Revenue -->
      <div class="info-card hover-effect">
        <div class="info-header">
          <p>Total Revenue</p>
          <!-- Pill with currency symbol and percentage -->
          <div class="pill">
            <span class="circle">₹</span>
            <p></p>
          </div>
          <h1>₹ <%= revenue %>
          </h1>
          <h4 class="revenue-details">Details ></h4>
        </div>
      </div>
      <!-- Info card: Total Customers -->
      <div class="info-card hover-effect">
        <div class="info-header">
          <p>Total Users</p>
          <!-- Pill with symbol and percentage -->
          <div class="pill">
            <span class="circle">Ħ</span>
            <p></p>
          </div>
        </div>
        <h1>
          <%= users.length %>
        </h1>
        <h4 class="customers-details">Details ></h4>
      </div>
    </div>
    <!-- Additional info section -->
    <div class="extra-info">
      <!-- Recent bookings -->
      <div class="recent ex-card hover-effect">
        <h1>Recently Added Hotels</h1>
        <div class="booking">
          <p>Hotel Name</p>
          <p>Location</p>
          <p>Rating</p>
        </div>
        <div class="bookings-list" id="scrollbar1">
          <% hotels.slice(Math.max(hotels.length - 4,0), hotels.length).reverse().forEach(hotel=> { %>
            <div class="booking">
              <p>
                <%= hotel.hotelName %>
              </p>
              <div class=" status pending">
                <%= hotel.hotelAddress %>
              </div>
              <p>
                <%= hotel.rating %>
              </p>
            </div>
            <% }); %>
        </div>
      </div>
      <!-- Additional cards (if any) -->
      <div class="ex-card hover-effect">
        <h1>Recent Users</h1>
        <div class="booking">
          <p>First name</p>
          <p>Username</p>
          <p>phone</p>
        </div>
        <div class="bookings-list" id="scrollbar1">
          <% users.slice(Math.max(users.length - 4, 0)).reverse().forEach(user => { %>
            <div class="booking">
                <p><%= user.fullname.split(" ")[0] %></p>
                <div class='booked status'> <%= user.username %></div>
                <p><%= user.phone %></p>
            </div>
        <% }); %>        
      </div>
    </div>
  </section>

