  <section class="all-bookings">
    
    <div class="header-wrapper">
      <div class="header-title">
        <h1>Bookings</h1>
      </div>
      <form class="search" action="/searchedSuperuserBooking" method="get">
        <input type="text" name="search" placeholder="Search">
        <button style="border: none;background: transparent;" type="submit" ><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
    </div>
    <div id="all-bookings-list">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Hotel</th>
            <th>Arrival</th>
            <th>Departure</th>
            <!-- <th>RoomType</th> -->
            <th>Status</th>
            <th>Payment</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach(booking => {
            if (new Date(booking.checkIn) > new Date()) { %>
                <tr>
                  <td><%= booking.user.fullname %></td>
                  <td><%= booking.user.email %></td>
                  <td><%= booking.hotel.hotelName %></td>
                  <td><%= new Date(booking.checkIn).toDateString() %></td>
                  <td><%= new Date(booking.checkOut).toDateString() %></td>
                  
                  <td><%= booking.status %></td>
                  
                  <td><%= booking.totalPrice %></td>

                  <td>
                    <form id="deactivatingbooking_<%= booking._id %>" action="/deletingBookings" method="post">
                      <input type="hidden" name="bookingId" value="<%= booking._id %>">
                      <button type="submit" class="btn deletebtn">Delete</button>
                    </form>
                  </td>

                  <% if (booking.status !== 'cancelled') { %>

                    
                    <td>
                      <form action="/cancelbookingfromsuperuser" method="post">
                        <input type="hidden" name="bookingId" value="<%= booking._id %>">
                        <button type="submit" class="btn">Cancel</button>
                      </form>
                    </td>

                    
                    
                    <% } %>

                    
                    
                </tr>
              <% }else{ %>
                <tr>
                  <td><%= booking.user.fullname %></td>
                  <td><%= booking.user.email %></td>
                  <td><%= booking.hotel.hotelName %></td>
                  <td><%= new Date(booking.checkIn).toDateString() %></td>
                  <td><%= new Date(booking.checkOut).toDateString() %></td>
                  
                  <td><%= booking.status %></td>
                  <td><%= booking.totalPrice %></td>
                  <td>
                    <form id="deactivatingbooking_<%= booking._id %>" action="/deletingBookings" method="post">
                      <input type="hidden" name="bookingId" value="<%= booking._id %>">
                      <button type="submit" class="btn deletebtn">Delete</button>
                    </form>
                  </td>
              </tr>
             <% }}); %>
        </tbody>
      </table>
    </div>
  </section>

<script>
     //alert box
document.addEventListener('DOMContentLoaded', function () {
    // Select all forms with IDs starting with "deactivatinguser_"
    const deactivateForms = document.querySelectorAll('[id^="deactivatingbooking_"]');

    // Add event listener for each form
    deactivateForms.forEach(form => {
        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent form submission

            // Show alert box when user tries to deactivate their account
            const confirmMessage = 'Are you sure you want to delete the booking? This action cannot be undone.';
            if (confirm(confirmMessage)) {
                // If user confirms, submit the form
                this.submit();
            } else {
                // If user cancels, do nothing
                return false;
            }
        });
    });
});
</script>
 
 
